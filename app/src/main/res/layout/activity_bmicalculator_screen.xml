<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BMICalculatorScreen">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heightEt"
        android:hint="Enter height in m"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weightEt"
        android:hint="Enter weight in kg"
        android:layout_below="@id/heightEt"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculateBtn"
        android:layout_below="@id/weightEt"
        android:text="CALCULATE"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultTv"
        android:layout_below="@id/calculateBtn"
        android:hint="BMI result"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/bmiIv"
        android:background="@mipmap/bmiscale"
        android:layout_below="@id/resultTv"
        android:layout_marginBottom="10dp"

        />


</RelativeLayout>